<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorfragmentdefault"
    tools:context=".ui.Fragments.EditNotesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_titleEditNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorPrimary"
            android:maxLines="1"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_txt_shape"
            android:padding="15dp"
            android:textColorHint="@color/white"/>

        <EditText
            android:id="@+id/edt_subtitleEditNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subtitle"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="15dp"
            android:maxLines="1"
            android:textSize="15sp"
            android:background="@drawable/edit_txt_shape"
            android:padding="15dp"
            android:textColorHint="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/green_EditNotes"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/green_dot"/>

            <ImageView
                android:id="@+id/yellow_EditNotes"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/yellow_dot"/>

            <ImageView
                android:id="@+id/red_EditNotes"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/red_dot"/>

        </LinearLayout>


        <EditText
            android:id="@+id/notes_EditNotes"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:hint="Notes"
            android:textSize="15sp"
            android:gravity="start"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_txt_shape"
            android:padding="15dp"
            android:textColorHint="@color/white"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnDeleteNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="13dp"
        android:src="@drawable/baseline_done_24"
        android:backgroundTint="@color/colorPrimary"/>

</FrameLayout>